pipeline {
    agent any
    environment {
        NEW_VERSION = '1.3.1'
        SAMPLE_CREDENTIALS = credentials("test-credentials")
    }
    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
                echo "${NEW_VERSION}"
            }
        }
        stage('Build') {
            steps {
                echo 'Building'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing'
                echo "${SAMPLE_CREDENTIALS}"
            }
        }
        stage('Release') {
            steps {
                echo 'Releasing'
            }
        }
    }
}
